# =============================================================================
# Система агрегации учебной литературы - Environment Variables
# =============================================================================
# Скопируйте этот файл в .env и настройте значения

# -----------------------------------------------------------------------------
# PostgreSQL
# -----------------------------------------------------------------------------
POSTGRES_USER=literature_user
POSTGRES_PASSWORD=literature_password  # ИЗМЕНИТЕ в production!
POSTGRES_DB=literature_db
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# MinIO (S3-совместимое хранилище)
# -----------------------------------------------------------------------------
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123  # ИЗМЕНИТЕ в production!
MINIO_BUCKET=literature
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# -----------------------------------------------------------------------------
# Meilisearch (полнотекстовый поиск)
# -----------------------------------------------------------------------------
MEILI_MASTER_KEY=masterKey123  # ИЗМЕНИТЕ в production!
MEILI_ENV=development  # Используйте 'production' для production
MEILI_PORT=7700

# -----------------------------------------------------------------------------
# Backend (FastAPI)
# -----------------------------------------------------------------------------
# Сгенерируйте: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
DEBUG=true  # false в production
BACKEND_PORT=8000

# -----------------------------------------------------------------------------
# Frontend (React)
# -----------------------------------------------------------------------------
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# Redis / Celery
# -----------------------------------------------------------------------------
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# External APIs (optional)
# -----------------------------------------------------------------------------
# Получите ключ API Google Books: https://developers.google.com/books/docs/v1/using
GOOGLE_BOOKS_API_KEY=

# -----------------------------------------------------------------------------
# Nginx (production profile)
# -----------------------------------------------------------------------------
NGINX_PORT=80
